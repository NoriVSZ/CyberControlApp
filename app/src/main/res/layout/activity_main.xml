<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="ðŸ’» Panel de Control - Administrador Ciber"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Status Indicator -->
        <TextView
            android:id="@+id/statusIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="#f44336"
            android:gravity="center"
            android:padding="8dp"
            android:text="Desconectado"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <!-- Section: Control of Computers -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp"
            app:strokeColor="#1a1a2e"
            app:strokeWidth="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:orientation="vertical"
                android:padding="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="ðŸ–¥ï¸ Control de Computadores"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Seleccionar Computador"
                    android:textColor="#333333"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerComputerId"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:background="@android:drawable/btn_dropdown" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2">

                    <Button
                        android:id="@+id/btnComputerOn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:backgroundTint="#4caf50"
                        android:text="ðŸŸ¢ Encender"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btnComputerOff"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:backgroundTint="#f44336"
                        android:text="ðŸ”´ Apagar"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btnInternetOn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:backgroundTint="#2196F3"
                        android:text="ðŸŒ Internet On"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btnInternetOff"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:backgroundTint="#ff9800"
                        android:text="ðŸš« Internet Off"
                        android:textColor="#FFFFFF" />
                </GridLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Section: Mass Control -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp"
            app:strokeColor="#1a1a2e"
            app:strokeWidth="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:orientation="vertical"
                android:padding="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="âš¡ Control Masivo"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2">

                    <Button
                        android:id="@+id/btnAllOn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:backgroundTint="#4caf50"
                        android:text="ðŸŸ¢ Todo On"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btnAllOff"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:backgroundTint="#f44336"
                        android:text="ðŸ”´ Todo Off"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btnAllNetOn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:backgroundTint="#2196F3"
                        android:text="ðŸŒ Todo Net"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btnAllNetOff"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:backgroundTint="#ff9800"
                        android:text="ðŸš« No Net"
                        android:textColor="#FFFFFF" />
                </GridLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Section: Alerts -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp"
            app:strokeColor="#ff9800"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff3e0"
                android:orientation="vertical"
                android:padding="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="ðŸš¨ EnvÃ­o de Alertas"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Tipo de Alerta"
                    android:textColor="#333333"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerAlertType"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:background="@android:drawable/btn_dropdown" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Mensaje de Alerta"
                    android:textColor="#333333"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editAlertMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="#FFFFFF"
                    android:gravity="top|start"
                    android:hint="Escribe el mensaje..."
                    android:minHeight="100dp"
                    android:padding="12dp"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/btnSendAlert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ff9800"
                    android:text="ðŸ“¢ Enviar Alerta"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Section: User Management -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp"
            app:strokeColor="#1a1a2e"
            app:strokeWidth="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:orientation="vertical"
                android:padding="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="ðŸ‘¤ GestiÃ³n de Usuarios"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Computador"
                    android:textColor="#333333"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerUserComputer"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:background="@android:drawable/btn_dropdown" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="ID de Usuario"
                    android:textColor="#333333"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editUserId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="#FFFFFF"
                    android:hint="Ej: USR-001"
                    android:padding="12dp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Nombre de Usuario"
                    android:textColor="#333333"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="#FFFFFF"
                    android:hint="Ej: Juan PÃ©rez"
                    android:padding="12dp"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/btnAssignUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#1a1a2e"
                    android:text="ðŸ‘¤ Asignar Usuario"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        
        <!-- Logout Button -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#D32F2F"
            android:text="ðŸšª Cerrar SesiÃ³n"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>